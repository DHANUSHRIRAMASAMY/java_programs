Abstract Class: Assessment
abstract class Assessment {
    // Concrete method
    public void getAssessmentDetails() {
        System.out.println("This is an academic assessment.");
    }

    // Abstract methods
    public abstract void conduct();
    public abstract void grade();
}

2. Interfaces
interface OnlineAccessible {
    void accessOnline();
}

interface AutoGrading {
    void performAutoGrading();
}

3. Subclasses Implementing Abstract Class + Interfaces
ðŸ“„ WrittenExam
class WrittenExam extends Assessment {
    public void conduct() {
        System.out.println("Conducting a written exam in classroom.");
    }

    public void grade() {
        System.out.println("Grading written exam manually.");
    }
}

ðŸ’» CodingTest
class CodingTest extends Assessment implements OnlineAccessible, AutoGrading {
    public void conduct() {
        System.out.println("Conducting coding test online.");
    }

    public void grade() {
        performAutoGrading(); // Use auto-grading
    }

    public void accessOnline() {
        System.out.println("Coding test is accessible online.");
    }

    public void performAutoGrading() {
        System.out.println("Auto-grading the coding test.");
    }
}

ðŸŽ¤ OralPresentation
class OralPresentation extends Assessment implements OnlineAccessible {
    public void conduct() {
        System.out.println("Conducting oral presentation in class or via video call.");
    }

    public void grade() {
        System.out.println("Grading oral presentation manually.");
    }

    public void accessOnline() {
        System.out.println("Oral presentation can be done online.");
    }
}

4. AssessmentManager (Polymorphic Runner)
public class AssessmentManager {
    public static void main(String[] args) {
        // Array of assessments (base class reference)
        Assessment[] assessments = {
            new WrittenExam(),
            new CodingTest(),
            new OralPresentation()
        };

        // Run each assessment polymorphically
        for (Assessment a : assessments) {
            System.out.println("\n--- Assessment Details ---");
            a.getAssessmentDetails();
            a.conduct();
            a.grade();

            // Check for online access
            if (a instanceof OnlineAccessible) {
                ((OnlineAccessible) a).accessOnline();
            }

            // Check for auto grading
            if (a instanceof AutoGrading) {
                ((AutoGrading) a).performAutoGrading();
            }
        }
    }
}

